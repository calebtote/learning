doctype html
html
  head
    link(rel='stylesheet', href='/css/index.css')
    link(rel='stylesheet', href='/node_modules/angular-material/angular-material.min.css')
    title Sherlock - EADP

  body(ng-app='MyApp', ng-cloak='', layout='column')
    .header
      h1.page-title

    ul.nav
      li: a(href='/') Home
      li: a(href='footprint') Footprint
      li: a(href='capacity') Capacity
      li: a(href='contact') Contact


    .main-content
        md-toolbar
            h1 Sherlock v0.1
        .container(layout='row', flex='')
            md-sidenav.lightblue.md-whiteframe-z2.container(md-is-locked-open='true')
                block content
            md-content#content.lightgreen.container(flex='')
                block content

    .footer
      p Copyright Â© 2017 Electronic Arts.

    script(src='/node_modules/angular/angular.js')
    script(src='/node_modules/angular-animate/angular-animate.js')
    script(src='/node_modules/angular-aria/angular-aria.js')
    script(src='/node_modules/angular-material/angular-material.js')
    script.
        angular
            .module('MyApp', ['ngMaterial'])
            .run(function ($log) {
                $log.debug("MyApp is ready!");
            });
    style.
        .red {
            background-color: red;
        }

        .lightblue {
            background-color: lightblue;
        }

        .lightgreen {
            background-color: lightgreen;
        }